{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "declaration": true,
    "isolatedModules": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "strictBindCallApply": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist",
    "target": "ESNext"
  },
  "include": [
    "src",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}